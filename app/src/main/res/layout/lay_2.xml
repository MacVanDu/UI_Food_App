<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Lay2Activity">

    <LinearLayout
        android:background="@drawable/b2_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <TextView
                android:id="@+id/txv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Order food to your door"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/img4"
                android:layout_marginBottom="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/b2_i1"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <ImageView
                android:id="@+id/img2"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/b2_i2"
                android:layout_width="60dp"
                android:layout_marginLeft="10dp"
                android:layout_height="60dp"/>
            <ImageView
                android:id="@+id/img3"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/b2_i3"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lay5"
                android:padding="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg2_1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign up"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <EditText
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:hint="Email adress"
                    android:paddingLeft="15dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg2_2"/>
                <EditText
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:hint="******"
                    android:paddingLeft="15dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg2_2"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Create account"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/bg2_3"/>
                <View
                    android:layout_marginTop="15dp"
                    android:background="#61000000"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Already have an account? Sign in"
                    android:textColor="#777777"
                    android:textSize="12sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>